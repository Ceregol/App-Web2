@model IEnumerable<Sistema_Web_trivias_2.Models.Pregunta>

@{
    ViewBag.Title = "ListaPregunta";
}


<div class="col-sm-1">....</div>
<div class="col-sm-10">
    <h2>ListaPregunta</h2>
    <div class="row">
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Nº</th>
                                    <th>Nombre Pregunta</th>
                                    <th>Editar</th>
                                    <th>Eliminar</th>
                                    <th>Detalles</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                    <tr class="odd gradeX">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id_Pregunta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Question)
                                        </td>                          
                                        <td class="center"><button type="button" class="btn btn-warning" aria-label="Center Align">  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button> </td>
                                        <td class="center"><button type="button" class="btn btn-danger" aria-label="Center Align">  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button> </td>
                                        <td> @Html.ActionLink("Detalles", "DetallesPregunta", "Pregunta", new { id = @item.Id_Pregunta }, new { @class = "button [secondary success alert]" }) </td>
                                    </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<div class="col-sm-1">....</div>

