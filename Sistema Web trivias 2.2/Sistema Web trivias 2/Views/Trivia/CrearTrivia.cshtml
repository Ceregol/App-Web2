@model Sistema_Web_trivias_2.Models.Trivia

@{
    ViewBag.Title = "CrearTrivia";
}

<section class="content-header">
    <h1>
        Trivia
        <small>Crear</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Crear Trivia</h3>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="box-body">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Nombre</label>
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder="Ingrese el nombre...", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Fecha de creación</label>
                                    <div id="datepicker-container">
                                        @Html.EditorFor(model => model.FechaDeCreacion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Seleccione la fecha...", @required = "required" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.FechaDeCreacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Categoría</label>
                                    @Html.DropDownListFor(m => m.Nombre_Categoria, Sistema_Web_trivias_2.Models.Trivia.GetCategoriaValues(), new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Nombre_Categoria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label>Descripción</label>
                                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = "3", @placeholder = "Ingrese la descripción...", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                <a class="btn btn-default" href="http://localhost:49275/trivia/ListaTrivia">Volver</a>
                                <button type="submit" class="btn btn-primary pull-right">Crear Trivia</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#datepicker-container input').datepicker({
                autoclose: true,
                language: 'es',
                format: 'dd-mm-yyyy',
                setDate: new Date(),
            });
        });
    </script>

}
