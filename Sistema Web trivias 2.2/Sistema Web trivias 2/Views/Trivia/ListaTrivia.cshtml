
@model IEnumerable<Sistema_Web_trivias_2.Models.Trivia>
@{
    ViewBag.Title = "ListaTrivia";
}


    <!-- DataTables JavaScript -->
<script src="@Url.Content("~/bower_components/datatables/media/js/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")"></script>
<!-- Custom Theme JavaScript -->
<script src="../dist/js/sb-admin-2.js"></script>



<div class="col-lg-12">
    <h2>Lista de Trivias</h2>

    <div class="row">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Matemáticas</h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <br />
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Nº</th>
                                <th>Nombre Trivia</th>
                                <th>Fecha de Creación</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                                <th>Detalles</th>
                                <th>Ver Lista de Preguntas</th>
                                <th>Agregar Preguntas</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id_trivia)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaDeCreacion)
                                    </td>

                                    @*<td> <a href="@Url.Action("VerTrivia", "Trivia", new { id = item.Id_trivia })" data-id="@item.Id_trivia" class="btn btn-warning" data-toggle="modal" data-target="#editarTrivia">Editar</a>
                                        </td>*@
                                    <td> @Html.ActionLink("Editar", "EditarTrivia", "Trivia", new { id = @item.Id_trivia }, new { @class = "btn btn-warning" }) </td>
                                    <td> @Html.ActionLink("Eliminar ", "EliminarTrivia", "Trivia", new { id = @item.Id_trivia }, new { @class = "btn btn-danger" }) </td>
                                    <td> @Html.ActionLink("Detalles", "DetallesTrivia", "Trivia", new { id = @item.Id_trivia }, new { @class = "btn btn-info" }) </td>
                                    <td> @Html.ActionLink("Lista De Preguntas", "listaPreguntas", "Trivia", new { id = @item.Id_trivia }, new { @class = "btn btn-primary" }) </td>
                                    <td> @Html.ActionLink("Crear Pregunta", "CrearPregunta", "Pregunta", new { id = @item.Id_trivia }, new { @class = "btn btn-success" }) </td>
                                    <td> @Html.ActionLink("Ver estadisticas", "ListaDeAlumnos", "Ranking", new { id = @item.Id_trivia }, new { @class = "btn btn-success" }) </td>

                                </tr>


                            }



                        </tbody>

                    </table>
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#crearTrivia"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </button></button>
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#editarTrivia"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button></button>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#eliminarTrivia"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> </button></button>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#detallesTrivia"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span> </button></button>

                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>

        <!-- /.panel -->
        <!-- /.panel -->
        <!-- /.col-lg-12 -->
    </div>



    <div class="modal " id="crearTrivia" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">  Crear Trivia</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-success">
                        <div class="panel-body">
                            @{Html.RenderAction("_CrearTrivia", "Trivia");}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal " id="editarTrivia" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">  Editar Trivia bkn</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-success">
                        <div class="panel-body">

                            @{Html.RenderAction("VerTrivia", "Trivia", new { id = 4 });}

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal " id="eliminarTrivia" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">  Eliminar Trivia</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-success">
                        <div class="panel-body">
                            @{Html.RenderAction("_EliminarTrivia", "Trivia", new { id = 4 });}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal " id="detallesTrivia" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">  Detalles Trivia</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-success">
                        <div class="panel-body">
                            @{Html.RenderAction("_DetallesTrivia", "Trivia", new { id = 4 });}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>




    <script type="text/javascript">
        $(function () {
            $('#detallesTrivia').dialog({
                autoOpen: false,
                width: 400,
                resizable: false,
                modal: true
            });

            $('.modal').click(function () {
                $('#detallesTrivia').load(this.href, function () {
                    $(this).dialog('open');
                });
                return false;
            });
        });
    </script>
