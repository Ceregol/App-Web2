
@model IEnumerable<Sistema_Web_trivias_2.Models.Trivia>
@{
    ViewBag.Title = "ListaTrivia";
}

<section class="content-header">
    <h1>
        Trivias
        <small>Todas</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Todas las Trivias</h3>
                </div>
                <div class="box-body">
                    <div class="row table-responsive no-left-right-margin">
                        <div class="col-xs-12">
                            <table id="table" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nº</th>
                                        <th>Nombre Trivia</th>
                                        <th>Categoría</th>
                                        <th class="no-sort">Editar</th>
                                        <th class="no-sort">Eliminar</th>
                                        <th class="no-sort">Detalles</th>
                                        <th class="no-sort">Preguntas</th>
                                        <th class="no-sort">Crear Preguntas</th>
                                        <th class="no-sort">Estadísticas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.Id_trivia)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.Nombre_Categoria)
                                            </td>
                                            <td>
                                                <center>
                                                    <a class="btn btn-warning btn-xs" href=@Url.Action("EditarTrivia", "Trivia", new { id = @item.Id_trivia })
                                                       data-toggle="tooltip" data-original-title="Editar Trivia"><i class="fa fa-pencil"></i></a>
                                                </center>
                                            </td>
                                            <td>
                                                <center>
                                                    <a class="btn btn-danger btn-xs" href=@Url.Action("EliminarTrivia", "Trivia", new { id = @item.Id_trivia })
                                                       data-toggle="tooltip" data-original-title="Eliminar Trivia"><i class="fa fa-trash"></i></a>
                                                </center>
                                            </td>
                                            <td>
                                                <center>
                                                    <a class="btn bg-teal btn-xs" href=@Url.Action("DetallesTrivia", "Trivia", new { id = @item.Id_trivia })
                                                       data-toggle="tooltip" data-original-title="Detalles de la Trivia"><i class="fa fa-eye"></i></a>
                                                </center>
                                            </td>
                                            <td>
                                                <center>
                                                    <a class="btn bg-teal btn-xs" href=@Url.Action("listaPreguntas", "Trivia", new { id = @item.Id_trivia })
                                                       data-toggle="tooltip" data-original-title="Ver Todas las Preguntas"><i class="fa fa-list"></i></a>
                                                </center>
                                            </td>
                                            <td>
                                                <center>
                                                    <a class="btn bg-olive btn-xs" href=@Url.Action("CrearPregunta", "Pregunta", new { id = @item.Id_trivia })
                                                       data-toggle="tooltip" data-original-title="Agregar Pregunta"><i class="fa fa-plus"></i></a>
                                                </center>
                                            </td>
                                            <td>
                                                <center>
                                                    <a class="btn bg-purple btn-xs" href=@Url.Action("ListaDeAlumnos", "Ranking", new { id = @item.Id_trivia })
                                                       data-toggle="tooltip" data-original-title="Ver Estadística"><i class="fa fa-pie-chart"></i></a>
                                                </center>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


