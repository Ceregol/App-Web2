@model IEnumerable<Sistema_Web_trivias_2.Models.Pregunta>

@{
    ViewBag.Title = "listaPreguntas";
}


<div class="panel panel-primary">
    <div class="panel-heading">Lista de Preguntas</div>
    <div class="panel-body">
        <table class="table table-striped">
            <tr>
                <th>
                   ID 
                </th>
                <th>
                    Pregunta
                </th>
                <th>
                    Lista 
                </th>
                <th>
                    Crear 
                </th>
                <th>
                    Editar 
                </th>
                <th>
                    Eliminar 
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Pregunta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question)
                    </td>
                    <td> @Html.ActionLink("ListaAlternativas", "ListaAlternativas", "Pregunta", new { id = @item.Id_Pregunta }, new { @class = "btn btn-info" }) </td>
                    <td> @Html.ActionLink("CrearAlternativa", "CrearAlternativa", "Alternativa", new { id = @item.Id_Pregunta }, new { @class = "btn btn-success" }) </td>
                    <td> @Html.ActionLink("EditarPregunta", "EditarPregunta", "Pregunta", new { id = @item.Id_Pregunta }, new { @class = "btn btn-warning" }) </td>
                    <td> @Html.ActionLink("EliminarPregunta", "EliminarPregunta", "Pregunta", new { id = @item.Id_Pregunta }, new { @class = "btn btn-danger" }) </td>

                </tr>
            }

        </table>
    </div>
</div>


